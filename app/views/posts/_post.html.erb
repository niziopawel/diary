<div class="block">
  <div class="card">
    <div class="card-header">
      <p class="card-header-title mb-0">
        <%= post.created_at.strftime("%d/%m/%Y") %>
        <%= post.city.capitalize %>
        <%= post.formatted_temperature %>
      </p>
      <div class="buttons mr-3">
        <%= link_to "Edit", new_user_session_path, class: "button is-primary is-small" %>
        <%= link_to "Delete", new_user_registration_path, class: "button is-danger is-small" %>
      </div>
    </div>
    <div class="card-content">
      <div class="content">
        <%= post.notice %>
      </div>
    </div>
  </div>
</div>
